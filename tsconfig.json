{
  "compilerOptions": {
    "noImplicitAny": false,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "^*": ["./app*"]
    },
  },
  "typeRoots": [
    "node_modules/@types/",
    "app/@types/"
  ],
  "include": ["app/"]
}
